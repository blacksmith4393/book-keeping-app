<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head.ejs %>
</head>

<body>

  <header>
    <% include ../partials/header.ejs %>
  </header>

  <main class="intro-header">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class ="intro-message">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Search Results</h3>
              </div>
              <div class="panel-body">
                <ul id="results" class="list-group">  
                  <% for(var i=0; i<items.length; i++){ %>
                    <li class ="list-group-item">
                      <div class="row">
                        <div class="col-xs-10">
                          <h4 class="list-group-item-heading"> <%= items[i].volumeInfo.title %> </h4>
                          <p class="list-group-item-text"> <%= items[i].volumeInfo.authors[0] %> </p>
                        </div>
                        <div class="col-xs-2">
                          <img src="<%= items[i].volumeInfo.imageLinks.thumbnail %>" class="img-thumbnail"/> 
                        </div>
                      </div>

                    </li>
                  <% } %>
                            
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

</body>

</html>